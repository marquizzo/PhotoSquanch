{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        // "sourceMap": true,
        // lets you know if there are implied "any" types.
        "noImplicitAny": false, 

        // Allows you to access non-constant properties, such as object[keyVar]
        "suppressImplicitAnyIndexErrors": true, 
        "lib": ["es2015", "dom"],
        "baseUrl": "./",
        "paths": {
            "utils": ["src/utils"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}